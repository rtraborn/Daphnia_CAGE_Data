### Command-line code used to generate files in this folder
>$ bedtools closest -a ConsensusClusters_TCO.bed -b ConsensusClusters_TCO.bed -S -d -io > ConsensusClusters_bidirectional_closest.bed
>$ bedtools closest -S -Da -io -id -a ConsensusClusters_TCO.bed -b ConsensusClusters_TCO.bed > ConsensusClusters_bidirectional_closest_upstream.bed
>$ bedtools closest -io -id -D a -a ConsensusClusters_TCO.bed -b ConsensusClusters_TCO.bed > ConsensusClusters_upstream_dist.bed
>$ bedtools closest -S -io -id -D a -a ConsensusClusters_TCO.bed -b ConsensusClusters_TCO.bed > ConsensusClusters_upstream_dist_opposite_strand.bed
>$ bedtools closest -s -io -id -D a -a ConsensusClusters_TCO.bed -b ConsensusClusters_TCO.bed > ConsensusClusters_upstream_dist_same_strand.bed
>$ bedtools closest -a ConsensusClusters_TCO.bed -b ConsensusClusters_TCO.bed -id -io -D ref > ConsensusClusters_up_dist_ref.bed
>$ bedtools closest -a ConsensusClusters_TCO.bed -b ConsensusClusters_TCO.bed -iu -io -D ref > ConsensusClusters_down_dist_ref.bed